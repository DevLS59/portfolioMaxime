---
import { getCollection } from "astro:content";
const electroData = await getCollection("electro");

// console.log(electroData)
---

<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.css"
/>

<div class="wrapper-elec3" id="electro">
  <div class="bg-video">
    <div class="swiper mySwiper">
      <div class="swiper-wrapper">
        {
          electroData.map((data) => (
            <div class="swiper-slide">
              <video autoplay loop muted>
                <source src={data.data.url} type="video/mp4" />
              </video>

              <div class="wrapper-title">
                <h1 class="title-section">ELECTRO</h1>
                <h3 class="title">
                  {data.data.title}
                  <>
                    <br />
                    <span> {data.data.role}</span>
                  </>
                </h3>
                <a class="btn-link" href={`/electro/${data.slug}`}>
                  Regardez
                </a>
              </div>
            </div>
          ))
        }
      </div>

      <div class="swiper-pagination"></div>
    </div>
  </div>

  <style lang="scss">
    .wrapper-elec3 {
      width: 100%;
      height: 100vh;
      position: relative;
      overflow: hidden;
      border: 2vw solid #fff;

      .bg-video {
        width: 100%;
        height: 100%;
      }
    }

    .swiper {
      width: 100%;
      height: 100vh;

      .swiper-wrapper {
        width: 100%;
        height: 100%;

        .swiper-slide {
          width: 100%;
          height: 100%;
          text-align: center;
          font-size: 18px;
          background: #fff;
          display: flex;
          flex-direction: column;
          justify-content: center;
          align-items: center;

          .wrapper-title {
            padding: 0 2rem;
            text-align: center;
            display: flex;
            flex-direction: column;
            align-items: center;
            position: absolute;
            width: 30%;
            height: 100%;
            left: 0;
            top: 0;
            background: #fff;
            opacity: 0.6;
            z-index: 1000;
            padding-top: 6rem;

            .title-section {
              font-weight: 800;
              font-family: "SaoTorpes";
              color: #000;
              font-size: 4.5vw;
              margin-bottom: 6rem;

              @media (max-width: 900px) {
                font-size: 3rem;
              }
            }
            .title {
              font-family: "Gabo";
              color: "#000";
              font-size: 3vw;
              margin-bottom: 2rem;
              text-transform: uppercase;

              span {
                font-size: 2vw;
                text-transform: uppercase;
              }

              @media (max-width: 900px) {
                font-size: 2rem;
              }
            }
          }
        }
      }
    }

    .swiper-slide video {
      display: block;
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .mySwiper .swiper-pagination-bullet {
      width: 20px;
      height: 20px;
    }
  </style>

  <script
    is:inline
    src="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.js"></script>

  <script is:inline>
    var swiper = new Swiper(".mySwiper", {
      spaceBetween: 30,
      centeredSlides: true,

      speed: 1200,
      effect: "fade",
      autoplay: {
        delay: 10000,
        disableOnInteraction: false,
      },
      pagination: {
        el: ".swiper-pagination",
        clickable: true,
      },
      // navigation: {
      //   nextEl: ".swiper-button-next",
      //   prevEl: ".swiper-button-prev",
      // },
    });
  </script>
</div>

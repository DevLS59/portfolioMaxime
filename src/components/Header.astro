<style lang="scss">
 /* HEADER */

header {
  width: 100%;
  height: 100vh;
  position: relative;
}
video {
  width: 100%;
  height: 100vh;
  object-fit: cover;
}


.text-box {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  background: black;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  mix-blend-mode: multiply;
  text-align: center;
  // z-index: 100;

  h1 {
    font-family: "SaoTorpes";
    font-size: 19vw;
    letter-spacing: 1.5vw;
    line-height: 400px;
    padding-top : 30px;
    

    @media (max-width: 500px) {
      font-size: 25vw;
      line-height: 300px;
      padding-top : 80px;
      writing-mode: vertical-rl;
      text-orientation: upright;
      line-height: 200px;
    }
  }
}

.links {
  width: 100%;
  height: 100%;
  gap: 8rem;
  color: #fff;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  font-family: "SaoTorpes";
  display: flex;
  justify-content: center;
  align-items: center;
  padding-top: 70px;
  font-size: 18px;
  // z-index: 200;

  @media (max-width: 900px) {
    gap: 4rem;
    font-size: 14px;
  }
  @media (max-width: 600px) {
    gap: 2rem;
    font-size: 14px;
    flex-direction: column;
  }
}

.links a {
  text-decoration: none;
  color: #fff;
  letter-spacing: 6px;
}
</style>

<script>
  /* Contact */
const toggle = document.querySelector(".nav-menu-toggle");
const menu = document.querySelector(".menu");
const titleHeader = document.querySelector(".title-header");

let mm = gsap.matchMedia();
const tl = gsap.timeline();

mm.add("(min-width: 600px)", () => {
  tl.to(menu, { y: 0 })
    .to(titleHeader, { y: "50vh" })
    .to(titleHeader, { scale: 3, delay: 0.5 })
    .to(".adresse-mail", { opacity: 1 })
    .to(".wrapper_gravityBtn", { opacity: 1 });
  tl.reversed(true);
  tl.to;
});

mm.add("(max-width: 599px)", () => {
  tl.to(menu, { y: 0 })
    .to(titleHeader, { y: "50vh" })
    .to(titleHeader, { scale: 2, delay: 0.5 })
    .to(".adresse-mail", { opacity: 1 })
    .to(".wrapper_gravityBtn", { opacity: 1 });
  tl.reversed(true);
  tl.to;
});
toggle.addEventListener("click", () => {
  tl.reversed(!tl.reversed());
});
</script>